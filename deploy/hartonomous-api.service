[Unit]
Description=Hartonomous API
After=network.target

[Service]
Type=notify
User=ahart
WorkingDirectory=/srv/www/hartonomous/api
ExecStart=/usr/bin/dotnet /srv/www/hartonomous/api/Hartonomous.Api.dll
Restart=always
RestartSec=10
KillSignal=SIGINT
SyslogIdentifier=hartonomous-api
Environment=ASPNETCORE_ENVIRONMENT=Production
Environment=DOTNET_PRINT_TELEMETRY_MESSAGE=false
Environment=AZURE_CLIENT_ID=c25ed11d-c712-4574-8897-6a3a0c8dbb7f

[Install]
WantedBy=multi-user.target
